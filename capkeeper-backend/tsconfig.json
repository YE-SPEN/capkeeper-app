{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.js",
      "src/**/*.mjs",
      "src/hapi-cors.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  